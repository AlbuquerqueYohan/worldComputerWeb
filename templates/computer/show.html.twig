{% extends 'base.html.twig' %}

{% block body %}

    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-mb-4">
                    <h1>{{ computer.nom }}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h2>Caractéristique de l'computer</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Marque :</td>
                        <td>{{ computer.marquesFk.nom }}</td>
                    </tr>
                    <tr>
                        <td>Processeur :</td>
                        <td>{{ computer.processeur }}</td>
                    </tr>
                    <tr>
                        <td>Carte graphique :</td>
                        <td>{{ computer.carteGraphique }}</td>
                    </tr>
                    <tr>
                        <td>Ram :</td>
                        <td>{{ computer.ram }}Go</td>
                    </tr>
                    <tr>
                        <td>Stockage :</td>
                        <td>{{ computer.stockage }}</td>
                    </tr>
                    <tr>
                        <td>Type de stockage :</td>
                        <td>{{ computer.stockageText }}</td>
                    </tr>
                    <tr>
                        <td>Poids :</td>
                        <td>{{ computer.poids }}</td>
                    </tr>
                    <tr>
                        <td>Dimesions (en pouces) :</td>
                        <td>{{ computer.dimensionsEcran }}</td>
                    </tr>
                    <tr>
                        <td>Port USB :</td>
                        <td>{{ computer.portUsb }}</td>
                    </tr>
                    <tr>
                        <td>Type :</td>
                        <td>{{ computer.typeText }}</td>
                    </tr>
                    <tr>
                        <td>Information supplémentaire :</td>
                        <td>{{ computer.caracteristique }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

